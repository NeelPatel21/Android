<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GhostActivity"
    android:id="@+id/ghost">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/ghostText"
        android:text=""
        android:layout_below="@+id/gameStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Starting game"
        android:textSize="40sp"
        android:id="@+id/gameStatus"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/add"
        android:textSize="25sp"
        android:layout_alignTop="@+id/editT"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="A.I."
        android:id="@+id/ai"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/add" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editT"
        android:maxLength="1"
        android:textSize="25sp"
        android:layout_below="@+id/ghostText"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:textSize="25sp"
        android:layout_below="@+id/ai"
        android:layout_marginTop="96dp"
        android:layout_alignRight="@+id/ai"
        android:layout_alignParentLeft="true" />


</RelativeLayout>

