<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="college.com.workshop.DataBase">

        <EditText
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/update"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="id"
            android:inputType="number"/>

        <EditText
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_id"
            android:layout_below="@+id/text_id"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:hint="name"
            android:inputType="textPersonName"/>

        <Button
            android:id="@+id/insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/spin_field"
            android:layout_below="@+id/spin_field"
            android:layout_marginTop="12dp"
            android:text="insert"/>

        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/insert"
            android:layout_alignBottom="@+id/insert"
            android:layout_alignStart="@+id/get_all"
            android:text="update"/>

        <Button
            android:id="@+id/get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/update"
            android:layout_alignBottom="@+id/update"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:text="get"/>

        <Button
            android:id="@+id/get_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:text="Get All"/>

        <EditText
            android:id="@+id/text_enroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/text_name"
            android:layout_below="@+id/text_name"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Enroll"

            android:inputType="textPersonName"/>

        <Spinner
            android:id="@+id/spin_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/text_enroll"
            android:layout_alignEnd="@+id/update"
            android:layout_alignStart="@+id/text_enroll"/>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/get_all"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

    </RelativeLayout>
</ScrollView>